<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8e0438">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Alfaruq Marsalsani S"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:textStyle="bold"
        android:translationY="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="20.01.53.0040"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:textStyle="italic"
        android:translationY="100dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/alfaruq"
        app:civ_border_width="4dp"
        app:civ_border_color="#EE9611"
        android:translationY="80dp" />

    <Button
        android:id="@+id/proximityPageId"
        android:text="Proximity Sensor"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:translationY="170dp"
        android:backgroundTint="#EE9611"
        android:textColor="@color/white"
        />



</FrameLayout>